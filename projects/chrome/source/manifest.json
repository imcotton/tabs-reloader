{
    "name": "Tabs Reloader",
    "description": "Reload tabs in current window",

    "manifest_version": 2,

    "icons": {
        "128": "icon_128.png"
    },

    "browser_action": {
        "default_icon": "icon_24.png",
        "default_title": "Reload tabs in this window"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "tabs"
    ],

    "offline_enabled": true,

    "version": "1.3.3"
}
